<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">


    <TextView
        android:id="@+id/sosTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="SOS Alert!"
        android:textColor="#1C2833"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sosMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sosTitleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="Sending SOS Alert..."
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelSOSButton"
        android:layout_width="233dp"
        android:layout_height="97dp"
        android:layout_below="@id/sosMessageTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:background="@drawable/stop_sos_btn"
        android:onClick="cancelSOS"
        android:text="cancel SOS"
        android:textColor="#34495E"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="302dp"
        android:layout_height="120dp"
        android:layout_below="@+id/cancelSOSButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:text="Make Sure You are Safe and Your Guardiant with you!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp" />


</RelativeLayout>
